<div id="navigation" class="col-md-2">
  <div class="row side-nav">
    <nav class="navbar navbar-dark bg-inverse">
      <button class="navbar-toggler hidden-md-up" type="button" data-toggle="collapse" data-target="#nav-content">
        &#9776;
      </button>
      <div class="collapse navbar-toggleable-sm" id="nav-content">
        <ul class="nav navbar-nav">
          <% nav_items.each do |item|%>
              <li class="nav-item <%= item.has_key?(:active) && item[:active] ? 'active' : '' %>">
                <a class="nav-link" href="<%= item[:link] %>">
                  <i class="fa fa-<%= item[:icon] %> fa-2x" aria-hidden="true"></i>
                  <div class="nav-text">
                    <%= item[:text] %>
                  </div>
                </a>
              </li>
          <% end %>
        </ul>
      </div>
    </nav>
  </div>
</div>